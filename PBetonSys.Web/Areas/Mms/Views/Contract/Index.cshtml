<div id="condition" class="container_12" style="position:relative;">
    <div class="grid_1 lbl">合同编号</div>
    <div class="grid_2 val"><input type="text" data-bind="value:form.Cont_ID" class="z-txt" /></div>
    <div class="clear"></div>
    <div class="grid_1 lbl">销售员</div>
    <div class="grid_2 val"><input type="text" data-bind="value:form.SalseName" class="z-txt" /></div>
    <div class="clear"></div>
    <div class="prefix_9" style="position:absolute;top:5px;height:0;">
        <a id="a_search" href="#" class="buttonHuge button-blue" data-bind="click:searchClick" style="margin:0 15px;">查询</a>
        <a id="a_reset" href="#" class="buttonHuge button-blue" data-bind="click:clearClick">清空</a>
    </div>
</div>

<table id="gridlist" data-bind="datagrid:grid">
    <thead>
        <tr>
            <th field="_id" hidden="true">_id</th>
            <th field="Cont_ID">系统编号</th>
            <th field="PrintCont_ID" editor="text">合同编号</th>
            <th field="FinshFlag" sortable="true" align="left" width="80" editor="{type: 'checkbox',options: {on: true,off: false}}" formatter="formatterEnable">工程结束</th>
            <th field="SimpleName" sortable="true" align="left" width="80" editor="text">简称</th>
            <th field="Clinet_id" sortable="true" align="left" width="100" editor="text">施工单位</th>
            <th field="SalseRecevice" sortable="true" align="center" width="80" editor="text">业务承接人</th>
            <th field="SalseName" sortable="true" align="left" width="80" editor="text">销售员</th>
            <th field="CheckDateTime" sortable="true" align="center" width="80" editor="{type:'datebox'}" formatter="com.formatDate">签订日期</th>
            <th field="BossName" sortable="true" align="left" width="80" editor="text">工程老板</th>
            <th field="LinkPhon" sortable="true" align="left" width="80" editor="text">联系电话</th>
            <th field="LinkName" sortable="true" align="left" width="200" editor="text">联系人</th>
            <th field="Password" sortable="true" align="left" width="60" editor="text">密码</th>
            <th field="WXCode" sortable="true" align="left" width="60" editor="text">微信号</th>
            <th field="Interva" sortable="true" align="left" width="60" editor="text">运距</th>
            <th field="Amount" sortable="true" align="left" width="80" editor="text">合同数量</th>
            <th field="FinShDateTime" sortable="true" align="center" width="80" editor="{type:'datebox'}" formatter="com.formatDate">结束日期</th>
            <th field="Strong" sortable="true" align="left" width="60" editor="text">栓号</th>
            <th field="Price" sortable="true" align="left" width="60" editor="text">单价</th>
            <th field="StatDate" sortable="true" align="left" width="60" editor="text">对账时间</th>
            <th field="paymentType" sortable="true" align="left" width="60" editor="text">付款方式</th>
            <th field="GatheringRatio" sortable="true" align="left" width="60" editor="text">比率</th>
            <th field="GatheringDate" sortable="true" align="left" width="80" editor="text">收款时间</th>
            <th field="EndPaymentDatetime" sortable="true" align="left" width="60" editor="{type:'datebox'}" formatter="com.formatDate">尾款期限</th>
            <th field="EndPaymentMonth" sortable="true" align="left" width="60" editor="text">余款</th>
            <th field="ContType" sortable="true" align="left" width="60" editor="text">合同类型</th>
            <th field="Remark" sortable="true" align="left" width="100" editor="text">备注</th>
        </tr>
    </thead>
</table>